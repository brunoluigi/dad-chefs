<div>
  <h1 class="font-bold text-4xl">My Cookbook</h1>

  <% if @recipes.present? %>
    <ul class="mt-4 space-y-2">
      <% @recipes.each do |recipe| %>
        <li class="p-4 border rounded-md">
          <%= link_to recipe.title, recipe_path(recipe) %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="mt-4">You haven't saved any recipes yet. Go search for some!</p>
  <% end %>
</div>
